<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:endColor="@color/blue_dark" android:startColor="@color/blue_light" android:type="radial"  android:gradientRadius="50"/>
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
            <corners android:radius="8dp" />
             <stroke android:width="1dp" android:color="@color/white" />
        </shape>
    </item>
    <item android:state_checked="true" android:state_focused="false">
        <shape android:shape="rectangle">
            <gradient android:endColor="@color/blue_dark" android:startColor="@color/blue_light" android:type="radial"  android:gradientRadius="50"/>
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
            <corners android:radius="8dp" />
             <stroke android:width="1dp" android:color="@color/blue_dark" />
        </shape>
    </item>
    <item android:state_checked="false" android:state_focused="true">
        <shape android:shape="rectangle">
			 <solid android:color="@color/blue_dark"/>
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
            <corners android:radius="8dp" />
             <stroke android:width="1dp" android:color="@color/white" />
        </shape>
    </item>
    <item android:state_checked="false" android:state_focused="false">
        <shape android:shape="rectangle">
			 <solid android:color="@color/blue_dark"/>
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
            <corners android:radius="8dp" />
             <stroke android:width="1dp" android:color="@color/blue_dark" />
        </shape>
    </item>

</selector>