<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="3dp" android:color="#3c3c3c" />

            <gradient android:angle="270" android:centerColor="#f4f6f5" android:endColor="#92a0a3" android:startColor="#92a0a3" />
        </shape></item>
    <item android:state_enabled="true"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="3dp" android:color="#3c3c3c" />

            <gradient android:endColor="#92a0a3" android:gradientRadius="270" android:startColor="#f4f6f5" android:type="radial" />
        </shape></item>

</selector>